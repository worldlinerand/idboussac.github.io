<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/idb_items"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:filterTouchesWhenObscured="true"
        android:orientation="vertical"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/separator_height"
            android:background="@color/gray"
            android:filterTouchesWhenObscured="true" />

        <RelativeLayout
            android:id="@+id/idb_claims"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/clickable_layout"
            android:clickable="true"
            android:filterTouchesWhenObscured="true"
            android:padding="@dimen/transaction_item_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:filterTouchesWhenObscured="true"
                android:text="@string/name"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/dark_grey"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/idb_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/transaction_item_margin"
                android:filterTouchesWhenObscured="true"
                android:singleLine="false"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/gray"
                android:textSize="13sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/separator_height"
            android:layout_marginStart="@dimen/transaction_item_margin"
            android:background="@color/gray"
            android:filterTouchesWhenObscured="true" />

        <RelativeLayout
            android:id="@+id/idb_tx_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/clickable_layout"
            android:clickable="true"
            android:filterTouchesWhenObscured="true"
            android:padding="@dimen/transaction_item_margin">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:filterTouchesWhenObscured="true"
                android:text="@string/id"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/dark_grey"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/idb_claims_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/transaction_item_margin"
                android:filterTouchesWhenObscured="true"
                android:gravity="end"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/gray"
                android:textSize="13sp" />

        </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/separator_height"
            android:background="@color/gray"
            android:filterTouchesWhenObscured="true" />

    <TextView
        android:id="@+id/idb_guarantor_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/transaction_item_margin"
        android:layout_marginTop="20dp"
        android:filterTouchesWhenObscured="true"
        android:text="Vouchers :"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/dark_grey"
        android:textSize="15sp" />

    <ListView
        android:id="@+id/guarantor_list"
        android:layout_width="match_parent"
        android:layout_height="345dp" />

    <Button
        android:id="@+id/button_claims_validation"
        android:layout_width="240dp"
        android:layout_height="45dp"
        android:layout_gravity="end"
        android:background="@drawable/button_regular_blue"
        android:filterTouchesWhenObscured="true"
        android:paddingEnd="30dp"
        android:paddingStart="30dp"
        android:shadowColor="@android:color/transparent"
        android:stateListAnimator="@null"
        android:text="add voucher"
        android:textAllCaps="false"
        android:textColor="@color/dark_blue"
        android:textSize="16sp" />


    </LinearLayout>
