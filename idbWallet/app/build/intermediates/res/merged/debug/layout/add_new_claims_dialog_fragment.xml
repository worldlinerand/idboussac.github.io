<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="350dp"
    android:layout_height="match_parent"
    android:minWidth="350dp">

    <TextView
        android:id="@+id/nc_dialog_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/claim_name"
        android:textColor="@color/dark_blue"
        android:layout_gravity="center_horizontal"
        />

    <EditText
        android:id="@+id/nc_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textCapSentences"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/nc_dialog_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="@string/cancel"
            android:textColor="@color/dark_blue"
            android:textSize="@dimen/text_small"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:background="@null"/>


        <Button
            android:id="@+id/nc_dialog_validate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:text="@string/validate"
            android:textColor="@color/dark_blue"
            android:textSize="@dimen/text_small"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:layout_marginLeft="100dp"
            android:background="@drawable/button_regular_blue"/>
    </RelativeLayout>
</LinearLayout>